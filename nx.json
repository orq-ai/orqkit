{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "production": ["default"],
    "sharedGlobals": []
  },
  "release": {
    "projects": ["packages/*"],
    "changelog": {
      "workspaceChangelog": {
        "createRelease": "github",
        "file": false
      }
    },
    "git": {
      "commit": true,
      "tag": true
    }
  },
  "targetDefaults": {
    "nx-release-publish": {
      "dependsOn": ["build"]
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "if [ -f {projectRoot}/tsconfig.spec.json ]; then bun test; fi"
        ]
      }
    }
  },
  "plugins": [
    {
      "plugin": "@nx/js/typescript",
      "options": {
        "typecheck": {
          "targetName": "typecheck"
        },
        "build": {
          "targetName": "build",
          "configName": "tsconfig.lib.json",
          "buildDepsName": "build-deps",
          "watchDepsName": "watch-deps"
        }
      }
    }
  ]
}
